# ===============================================
# CONFIGURACIÓN DE CALCULADORA DE EXPRESIONES
# ===============================================

# Directorios
SOURCE_DIR=src
INCLUDE_DIR=include
LIB_DIR=lib
BIN_DIR=bin
OBJ_DIR=obj

# Compilador
COMPILER=gcc
CFLAGS="-I${INCLUDE_DIR} -Wall -Wextra -std=c99"
LDFLAGS="-lm"

# Extensiones de archivos
C_EXT=.c
H_EXT=.h
OBJ_EXT=.o
EXE_EXT=

# Modo de compilación (debug/release)
BUILD_MODE=release

# Colores para terminal (Linux)
USE_COLORS=true